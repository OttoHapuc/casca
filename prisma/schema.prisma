generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conteudo {
  id           Int      @id @default(1)
  slug         String   @unique
  dados        Json
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt
}

model Relatorio {
  id           String   @id @default(cuid())
  titulo       String
  data         DateTime
  categoria    String
  arquivoUrl   String
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt
}

model Atividade {
  id        String   @id @default(cuid())
  ordem     String   @unique
  titulo    String
  descricao String
  criadoEm  DateTime @default(now())
}

model Projeto {
  id         String   @id @default(cuid())
  titulo     String
  detalhes   String
  parceiros  String
  resultados String
  criadoEm   DateTime @default(now())
}
