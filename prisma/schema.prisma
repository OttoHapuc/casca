generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conteudo {
  id           Int      @id @default(1)
  slug         String   @unique
  dados        Json
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt
}

model Relatorio {
  id           String   @id @default(cuid())
  titulo       String
  data         DateTime
  categoria    String
  arquivoUrl   String
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt
}

model Atividade {
  id        String   @id @default(cuid())
  ordem     String   @unique
  titulo    String
  descricao String
  criadoEm  DateTime @default(now())
}

model Projeto {
  id         String   @id @default(cuid())
  titulo     String
  detalhes   String
  parceiros  String
  resultados String
  criadoEm   DateTime @default(now())
}

model Certificacao {
  id         String    @id @default(cuid())
  titulo     String
  imagemUrl  String
  criadoEm   DateTime  @default(now())
  deletadoEm DateTime?
}

model Cidade {
  id         String    @id @default(cuid())
  nome       String    @unique
  criadoEm   DateTime  @default(now())
  deletadoEm DateTime?
  anexos     Anexo[]
}

model Anexo {
  id            String    @id @default(cuid())
  titulo        String
  arquivoUrl    String
  classificacao String
  cidadeId      String
  cidade        Cidade    @relation(fields: [cidadeId], references: [id], onDelete: Cascade)
  criadoEm      DateTime  @default(now())
  deletadoEm    DateTime?
}

model Classificacao {
  id         String    @id @default(cuid())
  nome       String    @unique
  criadoEm   DateTime  @default(now())
  deletadoEm DateTime?
}
